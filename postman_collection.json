							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"payment_method\": \"credit_card\",\n  \"gateway\": \"credit_card\",\n  \"card_number\": \"4111111111111111\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/orders/1/payments",
							"host": ["{{base_url}}"],
							"path": ["api", "orders", "1", "payments"]
						}
					},
					"response": []
				},
				{
					"name": "Process Payment (PayPal)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"payment_method\": \"paypal\",\n  \"gateway\": \"paypal\",\n  \"email\": \"user@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/orders/1/payments",
							"host": ["{{base_url}}"],
							"path": ["api", "orders", "1", "payments"]
						}
					},
					"response": []
				},
				{
					"name": "Get Payments for Order",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/orders/1/payments",
							"host": ["{{base_url}}"],
							"path": ["api", "orders", "1", "payments"]
						}
					},
					"response": []
				},
				{
					"name": "List All Payments",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/payments",
							"host": ["{{base_url}}"],
							"path": ["api", "payments"]
						}
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000"
		},
		{
			"key": "token",
			"value": ""
		}
	]
}

